@model GlobalUserVM

@{
    ViewData["Title"] = "UserDetails";
}

<h1>User Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdentityUser.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdentityUser.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdentityUser.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdentityUser.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdentityUser.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdentityUser.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserRoles)
        </dt>
        <dd class="col-sm-10">
            @String.Join(" - ", Model.UserRoles)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdentityUser.IsGarde)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdentityUser.IsGarde)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdentityUser.IsIndependance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdentityUser.IsIndependance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LibraryUser.Instruments)
        </dt>
        <dd class="col-sm-10">
            @String.Join(" - ", Model.LibraryUser.Instruments.Select(instr => instr.Name))
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "ModifyUser", new { id = Model.IdentityUser.Id }) |
    <a asp-action="UsersIndex">Back to List</a>
</div>
