@model Identity.DAL.ApplicationUser

@{ 
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome <small class="text-muted">to MusicAgora</small></h1>
    <p class="lead">MusicAgora is a web application wich purpose is to help bands, marching bands, concert bands or orchestras to organize and share their sheets library with their members.</p>
</div>
@if (Model != null)
{
    @Html.ActionLink("Enter the library", "Index", "Library", new { id = Model.Id })
    if (User.IsInRole("Admin"))
    {
    <div>
        @Html.ActionLink("Enter the admin board", "UsersIndex", "Admin", new { id = Model.Id })
    </div>
    }
}
@if (Model == null)
{
<p>Please sign in or register</p>
}
